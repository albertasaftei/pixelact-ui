{
  "name": "pixelact-ui",
  "version": "1.0.6",
  "description": "Playful pixel art style components built on top of shadcn/ui.",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixelact-ui/pixelact-ui"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && npx tsc -p tsconfig.build.json && node scripts/move-styles-file-postbuild.js && node scripts/copy-font-postbuild.js",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "style": "./dist/styles.css",
      "types": "./dist/index.d.ts",
      "import": "./dist/pixelact-ui.es.js",
      "require": "./dist/pixelact-ui.cjs.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@tailwindcss/vite": "^4.1.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.503.0",
    "tailwind-merge": "^3.2.0",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "tailwind-merge": "^3.2.0"
  }
}
